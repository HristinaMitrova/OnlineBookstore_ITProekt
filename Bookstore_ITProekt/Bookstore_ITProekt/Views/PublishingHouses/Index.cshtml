@model IEnumerable<Bookstore_ITProekt.Models.PublishingHouse>

@{
    ViewBag.Title = "Index";
}

<h2 class="badge bg-warning">List of Publishing Houses that collaborate with us</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-striped">
    <tr style="background-color:darkgoldenrod">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.ImgUrl" style="height:100px;width:100px" />
            <!--@Html.DisplayFor(modelItem => item.ImgUrl)-->
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                @Html.ActionLink("Details", "Details", new { id = item.ID })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            }
            else if (User.IsInRole("User"))
            {
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            }
            
        </td>
    </tr>
}

</table>
